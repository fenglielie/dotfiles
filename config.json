{
    "setup_groups": [
        {
            "dest_prefix": {
                "linux": "${HOME}",
                "windows": "${HOME}"
            },
            "entries": [
                {
                    "source": "git/.gitconfig",
                    "dest": ".config/git/config",
                    "action": "symlink"
                }
            ]
        },
        {
            "dest_prefix": {
                "linux": "${HOME}"
            },
            "entries": [
                {
                    "source": "tmux/tmux.conf",
                    "dest": ".config/tmux/tmux.conf",
                    "action": "symlink"
                },
                {
                    "source": "vim/.vimrc",
                    "dest": ".vimrc",
                    "action": "symlink"
                }
            ]
        }
    ],
    "check_groups": {
        "gcc": [
            "which gcc",
            "gcc --version"
        ],
        "clang": [
            "which clang",
            "clang --version"
        ],
        "clangd": [
            "which clangd",
            "clangd --version"
        ],
        "cmake": [
            "which cmake",
            "cmake --version"
        ],
        "ninja": [
            "which ninja",
            "ninja --version"
        ],
        "git": [
            "which git",
            "git --version"
        ],
        "tmux": [
            "which tmux",
            "tmux -V"
        ],
        "fish": [
            "which fish",
            "fish -v"
        ],
        "vim": [
            "which vim",
            "vim --version"
        ],
        "neovim": [
            "which nvim",
            "nvim --version"
        ],
        "python": [
            "which python",
            "python --version"
        ],
        "python3": [
            "which python3",
            "python3 --version"
        ]
    }
}
